%h1
  Root#index

= render "users/shared/links", resource_name: :user, devise_mapping: Devise.mappings[:user]

%h2
  User details

= link_to "Edit User", edit_registration_path(current_user)
= link_to "View Passkeys", users_passkeys_path

%code
  = current_user.email
  = current_user.webauthn_id

%div
  %h1 list
  - current_user.links.each do |link|
    = link.index
    = link.link

%div
  %h1 new
  = form_with(model: [:users, @link]) do |form|
    .field
      = form.label :index
      = form.number_field :index

    .field
      = form.label :link
      = form.text_field :link

    .actions
      = form.submit
